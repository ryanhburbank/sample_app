<% @user ||= current_user %><!--when user is nil(as on home page), sets user to current_user-->
<div class="stats">
	<a href="<%= following_user_path(@user) %>">
		<strong id="following" class="stat"><!--for ajax-->
			<%= @user.followed_users.count %>
		</strong>
		following
	</a>
	<a href="<%= followers_user_path(@user) %>">
		<strong id="followers" class="stat">
			<%= @user.followers.count %>
		</strong>
		followers
	</a>
</div>